# Database
DATABASE_URL="postgresql://user:pass@host:port/dbname"

# Security
SECRET_KEY="your-secret-key-here"
GRIP_SECRET="your-webhook-secret"
ENVIRONMENT="local"

# AI Features
USE_AI_FORECASTING=true
ENABLE_SCHEDULER=true  # Set to false when using external cron (e.g., GitHub Actions)
GROQ_API_KEY="your-groq-api-key"
GROQ_MODEL="llama3-8b-8192"

# Google OAuth (for Gmail sync)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FRONTEND_ORIGIN="http://localhost:5173"  # Must match Authorized JavaScript Origins in Google Console

# Email (for OTP verification)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
FROM_EMAIL="noreply@grip.com"
FROM_NAME="Grip"

# Branding (customize your app)
APP_NAME="Grip"
APP_TAGLINE="Money that minds itself."